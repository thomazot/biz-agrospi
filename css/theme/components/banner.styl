.cms-home .header-container + .banner
    margin-top: -16px

.banner
    @media (min-width: 993px)
        &--nojs
            .banner
                &__wrapper
                    display: flex

                &__item
                    flex: 1
                    min-width: 0

#banner__cultura
    --gray: #b4b8bf
    --color-hover: #006075

    .banner
        &__wrapper
            display: flex
            flex-flow: row wrap

        &__link
            &:hover
                opacity: 1

        &__item
            display: flex
            flex: 0 1 122px
            flex-flow: column nowrap
            padding: 5px
            min-width: 0
            width: auto

            img
                position: relative
                z-index: 1
                width: 100%
                object-fit: cover

            .title
                display: block
                padding: 10px 0
                color: var(--gray)
                text-align: center
                font-weight: bold
                font-size: 13px

            a
                position: relative
                display: block
                order: -1

                &:before
                    position: absolute
                    top: 0
                    left: 0
                    z-index: 2
                    visibility: hidden
                    width: 100%
                    height: 100%
                    border-radius: 4px
                    box-shadow: inset 0 0 0 4px var(--primary)
                    content: ''
                    opacity: 0
                    transition: all .2 ease

    @media (max-width: 992px)
        .banner
            &__item
                flex: 0 0 33.333%

    @media (max-width: 500px)
        .banner
            &__item
                flex: 0 0 50%

    @media (min-width: 993px)
        .banner
            &__wrapper
                justify-content: space-between

            &__item
                &:hover
                    a:before
                        visibility: visible
                        opacity: 1

                    .title
                        color: var(--color-hover)

#banner__banner-vitrine
    margin-top: -16px

    img
        border-radius: 4px

    @media (min-width: 993px)
        .banner
            &__item
                &:last-child
                    flex: 0 1 32.15%
                    margin-left: gap

    @media (max-width: 992px)
        .banner
            &__item
                &:last-child
                    margin-top: gap

#banner__regua-de-vantagens
    --bg: #086276
    --color: #ffffff

    .banner
        &__wrapper
            margin: 0 auto
            max-width: 100%
            width: 930px !important

    &
        margin-top: -16px
        background: var(--bg)
        box-shadow: 0 30px 0 var(--bg)

        .ruler
            color: var(--color)
            font-weight: bold
            font-size: 14px
