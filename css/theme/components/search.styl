.search
    @media (min-width: 569px)
        box-shadow: 0 0 10px rgba(0, 0, 0, .05)

        &__input
            padding-right: 60px
            min-height: 50px
            border: solid 1px #e4e9f1 !important
            border-radius: 2px !important
            box-shadow: none

        &__button
            position: absolute
            top: 0
            right: 0
            height: 50px
            background: none
            box-shadow: none
            color: var(--secundary)

            .ico
                width: 16px
                height: 17px

            &:hover
                background: none

    @media (min-width: 993px)
        .header &
            margin-left: 35px

    @media (max-width: 568px)
        &__button
            display: flex
            justify-content: center
            align-items: center
            padding: 0
            width: 50px
            height: 50px
            background: none
            box-shadow: none
            color: var(--secundary)

            .ico
                width: 16px
                height: 17px